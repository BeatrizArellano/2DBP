  "version": "0.2.0",
  "configurations": [
    {
      "name": "(rls) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/release/brom",
      "args": [], // Possible input args for a.out
      "stopAtEntry": false,
      "cwd": "/home/ey/cases/bs_mult",
      "environment": [ 
        {
        "name": "OMP_NUM_THREADS",
        "value": "24" //"16"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
          }
      ]
    },
    {
      "name": "(gdb) Fortran",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/debug/brom",
      "args": [], // Possible input args for a.out
      "stopAtEntry": false,
      "cwd": "/home/ey/cases/bs_mult",
      "environment": [ 
        {
        "name": "OMP_NUM_THREADS",
        "value": "16"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Launch Debugger with valgrind",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "/home/ey/cases/varna",
      "environment": [
        {
          "name": "PATH",
          "value": "$PATH:${command:cmake.launchTargetDirectory}"
        }
      ],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Connect to valgrind",
          "text": "${command:valgrind-task-integration.valgrindGdbArg}",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
